
package chapter06;

import java.util.Scanner;

public class boardmain {
	static Scanner Scan =  new Scanner (System.in);
	static boolean run = true;
	static board[] board = new board[100];
	public static void main(String[] args) {

		while(run) {
			System.out.println("게시글 보기");
			System.out.println("글 작성");
			System.out.println("글 삭제");
			System.out.println("프로그램 종료");
			int menu = Scan.nextInt();
			switch(menu) {
			case 1 :
				System.out.println("-------------게시판-------------");
				for (int i=0;i<board.length;i++) {
					System.out.println(board[i].getTitle());
				}
				Scan.nextLine();
				int number = Scan.nextInt();
				System.out.println("제목 " + board[number].getTitle());//
				System.out.println("내용 " + board[number].getContent());//
				System.out.println("내용 " + board[number].getAuthor());//
				break;
			case 2 :
				System.out.println("제목 입력");
				String title = Scan.nextLine();
				System.out.println("내용 입력");
				String content = Scan.nextLine();
				System.out.println("작성자 이름 입력");
				String author = Scan.nextLine();
				System.out.println("비밀번호 입력");
				int pwd = Scan.nextInt();

				board b = new board(title,content,author,pwd);

				for (int i=0;i<board.length;i++) {
					if(board[i] == null)
						board[i] = b;
					break;
				}
				break;
			case 3 :
				System.out.println("-------------삭제 할 게시물을 선택하십죠-------------");
				for (int i=0;i<board.length;i++) {
					System.out.println(board[i].getTitle());
				}
				Scan.nextLine();
				for (int i=0;i<board.length;i++) {
					System.out.println(board[i].getTitle());
					int number2 = Scan.nextInt();
					System.out.println("게시자의 이름을 입력하시요");
					String name = Scan.nextLine();
					System.out.println("비밀번호를 입력하시요");
					int number3 = Scan.nextInt();
					if(board[number2] != null) {
						if(board[number2].getPwd().equals(name) && board[number2].equals(number3) ) {
							board[number2] = null;
						}
					}
				}
				break;
			case 4 :
				run = false;
				System.exit(0);
				break;

			default :
				System.out.println("잘못 입력하셨습니다.");
			}
		}
	}
}