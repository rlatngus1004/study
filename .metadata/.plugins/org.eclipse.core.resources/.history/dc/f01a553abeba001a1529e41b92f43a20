package chapter02;

import java.util.Scanner;

public class test {

	public static void main(String[] args) {
		Scanner in = new Scanner(System.in);

		String[] names =  new String[] {"고길동","김길동","이길동","박길동","홍길동"};
		int [][] scores = new int [5][4];
		double[] avg = new double[5];
		int[] ranking = new int[] {1,1,1,1,1};

		while(true) {
			System.out.println("성적 관리 프로그램");
			System.out.println("1. 성적 입력");
			System.out.println("2. 성적 조회");
			System.out.println("3. 석차 조회");
			System.out.println("프로그램 종료");
			System.out.print("선택하시오");

			int selNum = Integer.parseInt(in.nextLine());

			switch(selNum) {
			case 1:
				System.out.println("성적을 입력하시요.");
				for(int i=0;i<names.length;i++) {
					System.out.println(names[i]+"학생");
					System.out.print("국어점수 : ");
					scores[i][0] = in.nextInt();
					System.out.print("영어점수 : ");
					scores[i][1] = in.nextInt();
					System.out.print("수학점수 : ");
					scores[i][2] = in.nextInt();
					for(int j=0;j<scores.length;j++) {
						scores[i][3] +=scores[i][j];
					}
					avg[i] = scores[i][3]/3.0;

					for(int k=0; k<i; k++) {
						if(avg[i]>avg[k]) {
							ranking[k]++;
						}else {
							ranking[i]++;										
						}
					}
				}	
				break;
			case 2:
				chkScore:while(true) {
					System.out.println("1.개인별 성적 조회");
					System.out.println("2.과목별 성적 조회");
					System.out.println("이전 매뉴 돌아가기");
					System.out.print("선택하시오");
					int selchkscore = Integer.parseInt(in.nextLine());
					switch(selchkscore) {
					case 1:
						break;
					case 2:
						System.out.println("조회 할 과목을 선택하시오");
						System.out.println("1. 국어 점수");
						System.out.println("2. 영어 점수");
						System.out.println("3. 수학 점수");
						int subject = Integer.parseInt(in.nextLine());

						int total = 0;
						double avgsub = 0.0;

						for(int i=0; i<scores.length;i++) 
							if(subject<=3) {
								total += scores [i][subject-1];
							}
						avgsub = total/5.0;
						if(subject == 1) {
							System.out.println("국어 점수 총점 : "+total);
							while(true)			System.out.println("국어 점수 평균 : "+avgsub);

						}else if (subject == 2) {
							System.out.println("영어 점수 총점 : "+total);
							System.out.println("영어 점수 평균 : "+avgsub);
						}else if(subject == 3) {
							System.out.println("수학 점수 총점 : "+total);
							System.out.println("수학 점수 평균 : "+avgsub);
						}else {
							System.out.println("다른 번호를 입력하시오");
						}
						break;
					case 3:
						break chkScore;
					default :
						System.out.println("다른 번호를 입력하시오");									
						break;
					}//selchkscore


				}//	while(true)

			case 3:
				for(int i=0;i<ranking.length;i++) {
					System.out.println(names[i]+" 학생의 석차 "+ranking[i]+"등");
				}
				break;
			case 4:
				System.out.println("프로그램이 종료됩니다.");
				System.exit(0);
				break;
			default :
				System.out.println("다른 번호를 입력하시오");
			}

		}
	}
}

